[galera]
# Mandatory settings
wsrep_on=ON
wsrep_provider=/usr/lib/galera/libgalera_smm.so
wsrep_cluster_address=gcomm://galera-master-node-1,galera-master-node-2,galera-master-node-3
binlog_format=row
default_storage_engine=InnoDB
innodb_autoinc_lock_mode=2

[mysqld]
character-set-server = utf8
collation-server = utf8_unicode_ci
skip-character-set-client-handshake
innodb_print_all_deadlocks = 1

# GCache size zero for SST test | default = 128M

wsrep_provider_options="gcache.size=0;gcache.page_size=0"
# wsrep_provider_options="gcache.size=128M;gcache.page_size=128M"